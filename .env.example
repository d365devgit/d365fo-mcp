# D365 Authentication (Required)
# Get these values from your Azure AD app registration
AZURE_CLIENT_ID=your-client-id-here
AZURE_CLIENT_SECRET=your-client-secret-here
AZURE_TENANT_ID=your-tenant-id-here

# D365 Instance Configuration (Required)
# Your D365 Finance & Operations instance name (without .operations.dynamics.com)
D365_INSTANCE=your-d365-instance-name

# Optional Configuration
DATAAREAID=usmf                    # Default company/legal entity ID
DATABASE_PATH=./d365fo-mcp.db      # SQLite database location
METADATA_CACHE_HOURS=24            # How long to cache D365 metadata
LOG_LEVEL=info                     # Logging level: debug, info, warning, error

# Development Settings (Optional)
DEBUG=false                        # Enable debug mode
SQLITE_ECHO=false                  # Echo SQLite queries to logs